{% extends 'base.html.twig' %}

{% block title %}{{ book.title }}{% endblock %}

{% block body %}
    <h1>{{ book.title }}</h1>

    <div class="row">
        <div class="col-md-4">
            {% if book.image %}
                <img src="{{ asset('uploads/images/' ~ book.image) }}" alt="{{ book.title }}" class="img-fluid img-thumbnail">
            {% else %}
                <div class="text-muted p-3 border">No image available</div>
            {% endif %}
        </div>
        
        <div class="col-md-8">
            <table class="table">
                <tbody>
                    <tr>
                        <th>Title</th>
                        <td>{{ book.title }}</td>
                    </tr>
                    <tr>
                        <th>ISBN</th>
                        <td>{{ book.isbn }}</td>
                    </tr>
                    <tr>
                        <th>Author</th>
                        <td>{{ book.author }}</td>
                    </tr>
                </tbody>
            </table>

            <div class="mt-3">
                <a href="{{ path('library_index') }}" class="btn btn-secondary">Back to list</a>
                <a href="{{ path('library_edit', {'id': book.id}) }}" class="btn btn-primary">Edit</a>
                
                {{ include('library/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}